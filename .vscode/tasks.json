{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build:extension",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/HashiCorp.Vault.DotNetCore.Configuration.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build:console",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/samples/console/HashiCorp.Vault.DotNetCore.Configuration.Sample.ConsoleApp.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build:web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/samples/web/HashiCorp.Vault.DotNetCore.Configuration.Sample.WebApp.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish:console",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/samples/console/HashiCorp.Vault.DotNetCore.Configuration.Sample.Console.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish:web",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "--configuration",
                "Release",
                "${workspaceFolder}/samples/web/HashiCorp.Vault.DotNetCore.Configuration.Sample.WebApp.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet:test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/test/HashiCorp.Vault.DotNetCore.Configuration.Tests.csproj"
            ],
            "problemMatcher": "$tsc"
        }
    ]
}